1.1 wyswietl klasy samochodow oraz ilosc samochodow w danej klasie
SELECT 
	klasy_samochodow.nazwa_klasy, 
	COUNT(samochody.id_klasy) AS ilosc 
FROM klasy_samochodow
	INNER JOIN samochody
    	ON samochody.id_klasy = klasy_samochodow.id_klasy
GROUP by klasy_samochodow.nazwa_klasy;

1.2
CREATE VIEW ILOSC_AUT_W_KLASIE AS (
SELECT 
	klasy_samochodow.nazwa_klasy, 
	COUNT(samochody.id_klasy) AS ilosc 
FROM klasy_samochodow
	INNER JOIN samochody
    	ON samochody.id_klasy = klasy_samochodow.id_klasy
GROUP by klasy_samochodow.nazwa_klasy);

3 podaj imiona i nazwiska klientow oraz liczbe wypozyczen

SELECT 
	klienci.imie_klienta, 
    klienci.nazwisko_klienta, 
    COUNT(wypozyczenia.id_klienta) as ilosc
FROM
	klienci
    INNER JOIN wypozyczenia
    ON wypozyczenia.id_klienta = klienci.id_klienta
GROUP by klienci.id_klienta;

ORDER BY RAND() - sortuj losowo
